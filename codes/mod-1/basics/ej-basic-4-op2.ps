Algoritmo PositivoNegativoParImpar
    Escribir "Ingrese un nÃºmero:"
    Leer numero
    
    mensaje = "El numero es "
    complemento_1 = "negativo "
    complemento_2 = "e impar"
	
    Si numero = 0 Entonces
        complemento_1 = "cero"
        complemento_2 = ""
    Sino
        Si numero > 0 Entonces
            complemento_1 = "positivo "
		FinSi
